<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:id="@+id/intership_cardview"
    android:orientation="vertical"
    android:layout_width="120dp"
    android:layout_height="190dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="#ffffff"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/intership_image"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/internship_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/andika"
            android:text="Vegtables"
            android:textColor="#1D355E"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/internshipCard_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/andika"
            android:textColor="#3C3D3B"
            android:text="Author"
            android:textSize="10sp" />

        <RatingBar
            android:id="@+id/internshipCard_rate"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="3.5" />


        <TextView
            android:id="@+id/internship_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/andika"
            android:text="Price :- 4500/-"
            android:textStyle="bold"
            android:textColor="#162944"
            android:textSize="8sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
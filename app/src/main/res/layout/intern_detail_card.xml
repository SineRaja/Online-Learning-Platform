<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:id="@+id/intern_cardView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp"
    android:background="#ffffff"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="0dp"
        android:background="#ffffff"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/intern_image"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_toEndOf="@id/intern_image"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/intern_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amaranth"
                android:text="Title of Course"
                android:textColor="#1D355E"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/intern_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muli_extralight"
                android:text="Author"
                android:textColor="#3C3D3B"
                android:textSize="12sp" />

            <RatingBar
                android:id="@+id/intern_rating"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="4.5" />

            <TextView
                android:id="@+id/intern_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin"
                android:text="cost"
                android:textColor="#162944"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>


    </RelativeLayout>



</androidx.cardview.widget.CardView>